<% layout('layouts/boilerplate')%>

<h1>Favorites places</h1>


<% user.userPlaces.forEach( (campground) => { %>
    <div class="card" style="width: 18rem;">
    <img src="<%=campground.images[0].url%>" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= campground.title%></h5>
      <p class="card-text"><%= campground.location%></p>
      <a href="/campgrounds/<%=campground._id%>" class="btn btn-primary">View place</a>
    </div>
  </div>
<% }) %>